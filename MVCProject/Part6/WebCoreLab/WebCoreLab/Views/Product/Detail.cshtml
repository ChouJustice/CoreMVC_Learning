@model WebCoreLab.Models.ViewModel.Product.ProductDetailViewModel

<div class="container pt-3">
    <div class="row">
        <div class="col-6">
            <div class="img-box w-50 m-auto">
                <img class="w-100" src="@Model.Product.Image" alt="">
            </div>
        </div>
        <div class="col-6 d-flex flex-column">
            <div>
                <h2>@Model.Product.Name</h2>
                <p>@Model.Product.Description</p>
            </div>
            <div class="d-flex">
                <select class="form-select form-select-sm">
                    <option value="1">1個</option>
                    <option value="2">2個</option>
                </select>
                <button class="btn btn-primary w-25 ms-auto">購買</button>
            </div>
        </div>
    </div>
</div>